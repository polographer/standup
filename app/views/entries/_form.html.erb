<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<hr />

	<div class="row">
		<div class="span3">
	    <%= f.label :yesterday %><br />
	    <%= f.text_area :yesterday %>
	  </div>
	  <div class="span3">
	    <%= f.label :today %><br />
	    <%= f.text_area :today %>
	  </div>	  
	
	  <div class="span3">
	    <%= f.label :roadblocks %><br />
	    <%= f.text_area :roadblocks %>
	  </div>
	
		<div class="span3">
	    <%= f.label :day %><br />
	    <%= f.text_field :day, :id=>"day_selector"%>
		  <div class="actions">
			    <%= f.submit :class=>"btn" %>
					<%= link_to 'Back', entries_path, :class=>'btn' %>
			</div>
			<br/>
			<% unless @yesterday_data.nil? %>
				<div>
					<p>
					Yesterday (<%= @yesterday_data.day %>) you said you 
					would get done: 
					</p>
					<p>	<%= simple_format @yesterday_data.today %>  </p>
				</div>
			<% end %>
	
	  </div>	
		
	</div>
	
	
	




<% end %>
