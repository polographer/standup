<h1>Week view</h1>

<br />
<ul class="thumbnails">
<% @monday.upto(@friday).each do |weekday| 
	data_day = @entries.where(:day=>weekday).first unless @entries.where(:day=>weekday).first.nil?
	data_next = @entries.where(:day=>weekday+1.day).first unless @entries.where(:day=>weekday+1.day).first.nil?
	%>
		<li class="span3">
	  	<div class="thumbnail">
				<h3>
					<%= weekday.strftime('%A') %> 
				</h3>
				<h5> <%= weekday %> </h5>
				<% unless data_next.nil? %>
					<span class="label label-success">
						reality
					</span>
					<p>
						<%= data_next.yesterday %>
					</p>
				<% end %>
				<% unless data_day.nil? %>
					<span class="label label-warning">
						expected
					</span>
					<p><%= data_day.today %></p>
				<% end %>
			</div>
		</li>
<% end %>
</ul>
<h1>List view</h1>

<table>
  <tr>
    <th>Entry for</th>
    <th>Yesterday</th>
    <th>Today</th>
    <th>Roadblocks</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.day %></td>
    <td><%= entry.yesterday %></td>
    <td><%= entry.today %></td>
    <td><%= entry.roadblocks %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

